{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "jsx": "preserve",
        "lib": ["dom", "es2015", "es2017"],
        "strict": true,
        "noEmit": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": false,
        "checkJs": true,
        "paths": {
            "@aabp/*": ["./src/*"],
            "@components/*": ["./src/components/*"]
        }
    },
    "include": ["./src/**/*", "./src/index.d.ts"]
}
